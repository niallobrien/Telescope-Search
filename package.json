{
  "name": "vscode-telescope",
  "displayName": "Vscode - Telescope",
  "description": "Fast, interactive file content search powered by ripgrep with live preview and syntax highlighting",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "icon": "media/logo.jpg",
  "publisher": "niallobrien",
  "repository": {
    "type": "git",
    "url": "https://github.com/niallobrien/Telescope-Search"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-telescope.telescope",
        "title": "Open Telescope Panel",
        "category": "Telescope"
      },
      {
        "command": "vscode-telescope.toggleTheme",
        "title": "Toggle Theme",
        "category": "Telescope"
      }
    ],
    "menus": {
      "activitybar/global": [
        {
          "command": "vscode-telescope.telescope",
          "group": "navigation@1",
          "icon": "media/telescope.svg",
          "when": "true"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscode-telescope.telescope",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "shiki": "^3.14.0"
  }
}
